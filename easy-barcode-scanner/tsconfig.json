{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        //"lib": ["DOM","ES2015"],
        //"strict": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./types",
        "noImplicitAny": true,
        "resolveJsonModule": true,
        // "types": ["node"],
        // "removeComments": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**"
    ],
}